<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.srutinreddy.srutinloginapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignupScreen"
            android:label="@string/title_activity_signup_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListView"
            android:label="@string/title_activity_list_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsScreen"
            android:label="@string/title_activity_list_view_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="arrayList.MyAdapter"
            android:label="@string/title_activity_my_adapter"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GridViewScreen"
            android:label="@string/title_activity_grid_view_screen"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".VideoPlayer"
            android:label="@string/title_activity_video_player"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
